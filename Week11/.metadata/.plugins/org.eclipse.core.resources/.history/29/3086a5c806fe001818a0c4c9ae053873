package week11;

public class Sorting {
	
	public static void swap(int[] a, int j, int k){
		int temp = a[j];
		a[j] = a[k];
		a[k] = temp;
		
	}
	
	public static void selectionSort(int[] a){
		
		int i , j , min;
		for(i = 0; i < a.length - 1; i++){
			for(j = i+1,min=i; j<a.length; j++){	//min의 초기값 지정
				if(a[j] < a[min]) 	//제일 작은 원소를 찾음
					min = j;
			}
			swap(a,min,i);	//교환
			System.out.println("=======Selection Sort========");
			System.out.println("Pass " + (i+1) + "=>");
			for(int k = 0; k < a.length; k++) {
				System.out.print("| " + a[k] + " |");
				
			}
			System.out.println("\n");
			System.out.println("=============================");

			
		}
		
		
	}
	
	public static void bubbleSort(int[] a){
		/*
		for(int i = a.length - 1; i >= 0; --i){
			for(int j = 0; j<i; j++){
				if(a[j] > a[j+1]){
					a[j] = a[j+1];
						swap(a,j,j+1);
				}
				System.out.print(a[i] + " ");
			}
		}
		*/
		
		int i , j;
		for(i = a.length-1; i > 0 ; i--) {
			for(j=0; j < i; j++) {
				if(a[j]>a[j+1])
					swap(a,j,j+1);
				System.out.println("=======Bubble Sort========");
				System.out.println("Pass " + (i-3) + "=>");
				for(int k = 0; k < a.length; k++) {
					System.out.print("| " + a[k] + " |");
					
				}
				System.out.println("\n");
				System.out.println("=============================");
			}
			
			
		}
		
		
	}
	
	public static void insertionSort(int[] a){
		int i , j , temp;
		boolean move;
		
		for(i = 1; i < a.length; i++){
			temp = a[i];	//삭제할 값 저장
			j = i;			//i값 변경을 막기 위해서 사용
			if(a[j-1] > temp)	//앞에 원소가 더 크면 움직여 준다.
				move = true;
			else
				move = false;
			while(move){
				a[j] = a[j-1];	//오른쪽으로 이동하고 빈자리 생성
				j--;
				if(j > 0 && a[j-1] > temp)	//앞에 값이 더크면 반복
					move = true;
				else
					move = false;
			}
			a[j] = temp;	//빈자리에 삽입
		
			System.out.println("=======Insertion Sort========");
			System.out.println("Pass " + (i) + "=>");
			for(int k = 0; k < a.length; k++) {
				System.out.print("| " + a[k] + " |");
				
			}
			System.out.println("\n");
			System.out.println("=============================");
		}
		
		
	}

}